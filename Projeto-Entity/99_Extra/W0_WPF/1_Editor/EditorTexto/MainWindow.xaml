<Window 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  x:Class="Window1" 
  Title="ToolBar Full Width Sample" Height="426" Width="670" 
  Background="#FFFFFFFF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="23"/>
            <RowDefinition Height="345*" />
            <RowDefinition Height="0" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StatusBar Grid.Row="4">
            <StatusBarItem Content="This is the StatusBar"/>
        </StatusBar>
        <ToolBar Grid.RowSpan="2" Height="26" HorizontalAlignment="Stretch" Margin="0,-3,0,0" Name="toolBar1" VerticalAlignment="Top">
            <Button ToolTip="Novo">
                <Image Source="">
            </Button>
        </ToolBar>
        <TextBox Grid.Row="2" HorizontalAlignment="Stretch" Name="textBox1" VerticalAlignment="Stretch" TextWrapping="Wrap" AcceptsReturn="True" />
    </Grid>
</Window> 
